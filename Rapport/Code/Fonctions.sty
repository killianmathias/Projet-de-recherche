\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{Code/Fonctions}[2025]

\RequirePackage{graphicx}

\renewcommand{\author}[2]{
    \expandafter\newcommand\csname Auteur#2\endcsname{%
        #1
    }%
}

\renewcommand{\title}[1]{
    \expandafter\newcommand\csname Titre\endcsname{%
        #1
    }%
}

\newcommand{\reportType}[1]{
    \expandafter\newcommand\csname TypeRapport\endcsname{%
        #1
    }%
}

\newcommand{\academicInfo}[3]{
    \expandafter\newcommand\csname Departement\endcsname{%
        #1
    }%
    \expandafter\newcommand\csname Universite\endcsname{%
        #2
    }%
    \expandafter\newcommand\csname Annee\endcsname{%
        #3
    }%
}

\newcommand{\titleImage}[1]{
    \expandafter\newcommand\csname ImageTitre\endcsname{%
        #1
    }%
}

\renewcommand{\date}[1]{
    \expandafter\newcommand\csname Date\endcsname{%
        #1
    }%
}

\renewcommand{\maketitle}{
    \begin{titlepage}
        \centering

        \vspace*{1cm}

        {\LARGE \TypeRapport}

        \vspace{1cm}

        % Title and subtitle are enclosed between two rules.
        \rule{\textwidth}{1pt}

        % Title
        \vspace{\baselineskip}
        {\huge \textbf{\Titre}}
        
        \rule{\textwidth}{1pt}

        \vspace{1cm}

        % Set this size for the remaining titlepage.
        \large

        % Authors side by side, using two minipages as a trick.
        \begin{minipage}{.5\textwidth}
            \centering
            \AuteurI \\
        \end{minipage}%
        \begin{minipage}{.5\textwidth}
            \centering
            \AuteurII \\
        \end{minipage}

        % More authors can be inserted here with additional minipages.

        \vspace{3cm}

        % Report logo.
        \includegraphics[width=.7\textwidth]{\ImageTitre}

        \vfill

        % University and date information at the bottom of the titlepage.
        \Departement \\
        \Universite \\
        \Annee \\
        \Date
    \end{titlepage}
}